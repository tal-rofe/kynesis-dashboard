{
	"name": "kynesis",
	"version": "1.0.0",
	"description": "Kynesis Dashboard",
	"private": true,
	"license": "UNLICENSED",
	"author": "Kynesis <dev@kynesis.io> (https://kynesis.io)",
	"type": "module",
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"husky:install": "husky",
		"git:config": "git config --local include.path ../.gitconfig",
		"setdev": "run-p husky:install git:config",
		"onboarding": "node ./scripts/onboarding.js",
		"prepare": "is-ci || is-docker || run-s setdev onboarding",
		"cluster:start": "pnpm exec ./docker/scripts/start-cluster.sh",
		"cluster:stop": "pnpm exec ./docker/scripts/stop-cluster.sh",
		"cluster:restart": "pnpm exec ./docker/scripts/restart-cluster.sh",
		"build:nested": "nx run-many --target=build --nx-bail",
		"inflint": "inflint -c ./inflint.config.cjs",
		"inflint:nx": "nx inflint",
		"knip": "knip -c ./knip.json",
		"knip:nx": "nx knip",
		"lint:root": "eslint -c ./.eslintrc.cjs --ignore-pattern \"apps\" \"**/*.{ts,js,cjs}\" --resolve-plugins-relative-to .",
		"lint:root:nx": "nx lint:root",
		"lint:nested": "nx run-many --target=lint --nx-bail",
		"lint:all": "run-p lint:root:nx lint:nested",
		"type-check:root": "tsc --project ./tsconfig.json",
		"type-check:root:nx": "nx type-check:root",
		"type-check:nested": "nx run-many --target=type-check --nx-bail",
		"type-check:all": "run-p type-check:root:nx type-check:nested",
		"prettier": "prettier --check **/*.{ts,js,cjs,json,yaml}",
		"prettier:nx": "nx prettier",
		"cspell": "cspell lint -c ./cspell.json --gitignore --no-progress --no-summary **",
		"cspell:nx": "nx cspell"
	},
	"devDependencies": {
		"@commitlint/cli": "19.1.0",
		"@exlint.io/inflint": "2.1.1",
		"@types/node": "20.11.26",
		"@typescript-eslint/eslint-plugin": "6.21.0",
		"@typescript-eslint/parser": "6.21.0",
		"chalk": "5.3.0",
		"commitizen": "4.3.0",
		"cspell": "8.6.0",
		"cz-vinyl": "2.5.1",
		"eslint": "8.57.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-deprecation": "1.5.0",
		"eslint-plugin-import": "2.29.1",
		"eslint-plugin-unicorn": "47.0.0",
		"eslint-plugin-unused-imports": "3.1.0",
		"figlet": "1.7.0",
		"husky": "8.0.3",
		"is-ci": "3.0.1",
		"is-docker": "3.0.0",
		"knip": "4.2.0",
		"lint-staged": "15.2.2",
		"npm-run-all2": "5.0.2",
		"nx": "18.1.2",
		"open": "10.1.0",
		"pnpm": "8.15.4",
		"prettier": "2.8.8",
		"prettier-plugin-sh": "0.14.0",
		"typescript": "5.4.2",
		"wait-on": "7.2.0"
	},
	"packageManager": "pnpm@8.15.4",
	"engines": {
		"pnpm": "8.15.4",
		"node": "20.11.1"
	}
}
