{
	"$schema": "./node_modules/nx/schemas/nx-schema.json",
	"workspaceLayout": {
		"appsDir": "apps"
	},
	"tasksRunnerOptions": {
		"default": {
			"runner": "nx/tasks-runners/default",
			"options": {
				"cacheableOperations": [
					"build",
					"lint",
					"type-check",
					"prettier",
					"cspell",
					"type-check:root",
					"lint:root",
					"knip",
					"inflint",
					"storybook:build",
					"storybook:test"
				]
			}
		}
	},
	"namedInputs": {
		"source": ["{projectRoot}/src/**/*"],
		"jsSource": ["{projectRoot}/src/**/*.{ts,js,cjs}"],
		"reactTsSource": ["{projectRoot}/src/**/*.{ts,tsx}"]
	},
	"targetDefaults": {
		"build": {
			"inputs": ["source"],
			"outputs": ["{projectRoot}/dist", "{projectRoot}/.next"]
		},
		"lint": {
			"inputs": [
				"jsSource",
				"{workspaceRoot}/.eslintrc.cjs",
				"{workspaceRoot}/.eslintignore",
				"{projectRoot}/.eslintrc.cjs",
				"{projectRoot}/.eslintignore"
			],
			"outputs": []
		},
		"type-check": {
			"inputs": ["reactTsSource", "{projectRoot}/tsconfig.json", "{projectRoot}/tsconfig.base.json", "{workspaceRoot}/tsconfig.base.json"],
			"outputs": []
		},
		"prettier": {
			"inputs": ["**/*.{ts,js,cjs,json,yaml}"],
			"outputs": []
		},
		"cspell": {
			"inputs": ["**"],
			"outputs": []
		},
		"type-check:root": {
			"inputs": ["!(apps)/**/*.ts", "{workspaceRoot}/tsconfig.json", "{workspaceRoot}/tsconfig.base.json"],
			"outputs": []
		},
		"lint:root": {
			"inputs": ["!(apps)/**/*.{ts,js,cjs}", "{workspaceRoot}/.eslintrc.cjs", "{workspaceRoot}/.eslintignore"],
			"outputs": []
		},
		"storybook:build": {
			"inputs": ["{projectRoot}/.storybook", "{projectRoot}/src/components/ui/**/*", "{projectRoot}/src/stories/**/*"],
			"outputs": ["{projectRoot}/storybook-static"]
		},
		"storybook:test": {
			"inputs": ["{projectRoot}/.storybook", "{projectRoot}/src/components/ui/**/*", "{projectRoot}/src/stories/**/*"],
			"outputs": []
		}
	}
}
